<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FeedBack"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/menu_backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give Feedback" />


    <TextView
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="19dp"
        android:textColor="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How did we do ?" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressBackgroundTint="#F44336"
            android:progressTint="#241EC3" >

        </RatingBar>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="----------------------------------"
        android:textColor="#40323A" />

    <TextView
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Care to share more about it ?" />

    <EditText

        android:layout_width="369dp"
        android:layout_height="295dp"
        android:layout_gravity="center"
        android:background="#Fff"
        android:backgroundTint="#EDE6EC"
        android:gravity="center"
        android:hint="Type Here  "
        android:inputType="textMultiLine"
        android:lines="4"
        android:padding="65dp" />

    <Button
        android:id="@+id/sendBtn"
        android:text="send"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        />

</LinearLayout>